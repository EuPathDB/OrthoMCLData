<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<settings>
		<setting name="defaultExecutorType" value="BATCH" />
	</settings>

	<typeAliases>
        <typeAlias type="org.orthomcl.data.layout.Group" alias="Group" />
        <typeAlias type="org.orthomcl.data.layout.Sequence" alias="Sequence" />
		<typeAlias type="org.orthomcl.data.layout.BlastScore" alias="BlastScore" />
	</typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="oracle.jdbc.OracleDriver" />
				<property name="url" value="${orthomcl-data-layout.db.connection}" />
				<property name="username" value="${orthomcl-data-layout.db.login}" />
				<property name="password" value="${orthomcl-data-layout.db.password}" />
			</dataSource>
		</environment>
	</environments>

	<mappers>
		<mapper resource="mappers/GroupMapper.xml" />
	</mappers>

</configuration>