#!/usr/bin/perl

my $fastaFile = $ARGV[0];

&usage unless $fastaFile;

my $idHash;
while(<STDIN>) {
  chomp;
  $idHash->{$_} = 1;
}

if ($fastaFile =~ m/\.gz$/) {
  open(F, "gunzip -c $fastaFile |") or die $!;
}
else {
  open(F, "<$fastaFile") or die $!;
}

my $currentSeq;
my $currentId;
my $filteredCount;
while (<F>) {
  chomp;
  # handle prev seq
  if (/\>\d+ (\S+)/) {
    if ($currentSeq) {
      if (!$idHash->{$currentId}) {
	print $currentSeq;
      } else {
	$filteredCount++;
      }
      $currentSeq = "";
    }
    $currentId = $1;
  }
  $currentSeq .= "$_\n";
}
if (!$idHash->{$currentId}) {
  print $currentSeq;
} else {
  $filteredCount++;
}
print STDERR "filtered away $filteredCount sequences\n";

sub usage {
  print "
remove from a fasta file sequences with an ID found on STDIN

usage:  cat ids > filterFromFasta fasta_file
";
}
